---
import { Mail, Phone, MapPin, Facebook, Instagram, Twitter, Linkedin } from 'lucide-react';

const currentYear = new Date().getFullYear();

const footerLinks = {
  company: [
    { name: 'Nosotros', href: '/about' },
    { name: 'Servicios', href: '/#servicios' },
    { name: 'Galería', href: '/#galeria' },
    { name: 'Contacto', href: '/contact' },
  ],
  services: [
    { name: 'Matrimonios', href: '/#servicios' },
    { name: 'Eventos Corporativos', href: '/#servicios' },
    { name: 'Comuniones', href: '/#servicios' },
    { name: 'Cenas Privadas', href: '/#servicios' },
  ],
  legal: [
    { name: 'Política de Privacidad', href: '/privacidad' },
    { name: 'Términos y Condiciones', href: '/terminos' },
    { name: 'Cookies', href: '/cookies' },
  ],
};

const socialLinks = [
  { name: 'Facebook', icon: Facebook, href: 'https://facebook.com' },
  { name: 'Instagram', icon: Instagram, href: 'https://instagram.com' },
  { name: 'Twitter', icon: Twitter, href: 'https://twitter.com' },
  { name: 'LinkedIn', icon: Linkedin, href: 'https://linkedin.com' },
];
---

<footer class="bg-dark-900 text-white">
  <div class="container-custom">
    <!-- Main Footer Content -->
    <div class="py-12 lg:py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
        <!-- Company Info -->
        <div class="space-y-4">
          <div class="flex items-center space-x-2">
            <div class="w-10 h-10 bg-gradient-to-br from-primary-600 to-primary-400 rounded-lg flex items-center justify-center">
              <span class="text-white font-bold text-xl">EP</span>
            </div>
            <span class="text-xl font-serif font-bold">Eventos Premium</span>
          </div>
          <p class="text-dark-300 text-sm leading-relaxed">
            Creamos experiencias únicas e inolvidables. Organizamos eventos privados con excelencia y dedicación.
          </p>
          <div class="space-y-2">
            <a href="mailto:info@eventospremium.com" class="flex items-center space-x-2 text-dark-300 hover:text-primary-400 transition-colors text-sm group">
              <Mail className="w-4 h-4 group-hover:scale-110 transition-transform" />
              <span>info@eventospremium.com</span>
            </a>
            <a href="tel:+34900123456" class="flex items-center space-x-2 text-dark-300 hover:text-primary-400 transition-colors text-sm group">
              <Phone className="w-4 h-4 group-hover:scale-110 transition-transform" />
              <span>+34 900 123 456</span>
            </a>
            <div class="flex items-start space-x-2 text-dark-300 text-sm">
              <MapPin className="w-4 h-4 mt-1 flex-shrink-0" />
              <span>Calle Principal 123<br />28001 Madrid, España</span>
            </div>
          </div>
        </div>

        <!-- Company Links -->
        <div>
          <h3 class="text-lg font-serif font-semibold mb-4">Empresa</h3>
          <ul class="space-y-2">
            {footerLinks.company.map((link) => (
              <li>
                <a href={link.href} class="text-dark-300 hover:text-primary-400 transition-colors text-sm">
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Services Links -->
        <div>
          <h3 class="text-lg font-serif font-semibold mb-4">Servicios</h3>
          <ul class="space-y-2">
            {footerLinks.services.map((link) => (
              <li>
                <a href={link.href} class="text-dark-300 hover:text-primary-400 transition-colors text-sm">
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Newsletter -->
        <div>
          <h3 class="text-lg font-serif font-semibold mb-4">Newsletter</h3>
          <p class="text-dark-300 text-sm mb-4">
            Recibe ofertas exclusivas y novedades directamente en tu correo.
          </p>
          <form class="space-y-2">
            <input
              type="email"
              placeholder="Tu email"
              class="w-full px-4 py-2 text-sm bg-dark-800 border border-dark-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 text-white placeholder-dark-400"
              aria-label="Email para newsletter"
            />
            <button type="submit" class="w-full btn-primary text-sm">
              Suscribirme
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Bottom Footer -->
    <div class="border-t border-dark-800 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <!-- Copyright -->
        <p class="text-dark-400 text-sm">
          © {currentYear} Eventos Premium. Todos los derechos reservados.
        </p>

        <!-- Social Links -->
        <div class="flex items-center space-x-4">
          {socialLinks.map((social) => {
            const Icon = social.icon;
            return (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-9 h-9 flex items-center justify-center bg-dark-800 hover:bg-primary-600 rounded-lg transition-all duration-300 group"
                aria-label={social.name}
              >
                <Icon className="w-4 h-4 text-dark-300 group-hover:text-white transition-colors" />
              </a>
            );
          })}
        </div>

        <!-- Legal Links -->
        <div class="flex items-center space-x-4 text-sm">
          {footerLinks.legal.map((link, index) => (
            <>
              <a href={link.href} class="text-dark-400 hover:text-primary-400 transition-colors">
                {link.name}
              </a>
              {index < footerLinks.legal.length - 1 && (
                <span class="text-dark-700">|</span>
              )}
            </>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
